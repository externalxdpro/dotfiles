# Disable titlebar
default_border pixel 2
# Set window gaps
gaps inner 10
# Mouse hover focuses window
focus_follows_mouse yes
# Mouse follows focus
mouse_warping container
# Limit focus wrapping to workspace
focus_wrapping workspace

